{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "configure-module input",
    "$id": "http://schema.nethserver.org/porthos/configure-module-input.json",
    "description": "Configure porthos",
    "examples": [
        {
            "source": "rsync://mirror1.hs-esslingen.de",
            "retention": 30,
            "lets_encrypt": false,
            "server_name": "updates.nethserver.org"
        }
    ],
    "type": "object",
    "properties": {
        "source": {
            "type": "string",
            "description": "Official upstream rsync mirror base address",
            "pattern": "^rsync://"
        },
        "retention": {
            "type": "integer",
            "minimum": 1
        },
        "lets_encrypt": {
            "description": "Obtain a valid LE certificate for server_name",
            "type": "boolean",
            "default": false
        },
        "server_name": {
            "type": "string",
            "format": "idn-hostname"
        }
    }
}
